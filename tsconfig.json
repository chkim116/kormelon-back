{
	"compilerOptions": {
		"target": "ES5",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"downlevelIteration" : true,
		"outDir": "./dist",
		"noUnusedLocals": true,
		"removeComments": true,
		// for typeorm
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
	},
	"include": ["**/*.ts", "*.ts"],
	"exclude" : [
		"./src/__test__/**/*.ts",
		"./jest.*.ts",
	]
}